{
  "name": "merossity",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "bun run scripts/postinstall.ts",
    "dev": "concurrently --kill-others-on-fail --names core,web,cli --prefix-colors blue,green,magenta \"bun run --filter @merossity/core dev\" \"bun run --filter @merossity/web dev\" \"bun run --filter @merossity/cli dev\"",
    "build": "bun run --workspaces --if-present build",
    "lint": "bun run --workspaces --if-present lint",
    "typecheck": "bun run --workspaces --if-present typecheck",
    "format": "bun run --workspaces --if-present format",
    "qa": "bun run lint && bun run typecheck && bun run format",
    "new": "bun run packages/new/index.ts"
  },
  "devDependencies": {
    "@merossity/core": "workspace:*",
    "@merossity/qa": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "latest",
    "concurrently": "latest",
    "oxlint": "latest",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "latest",
    "typescript": "latest"
  }
}
