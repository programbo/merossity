{
  "name": "@merossity/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "cli": "dist/index.js"
  },
  "scripts": {
    "dev": "concurrently \"bunup --watch\" \"bun --watch dist/index.js\"",
    "build": "bunup",
    "postinstall": "bun run scripts/postinstall.ts",
    "lint": "oxlint --config oxlint.json --fix .",
    "format": "prettier --config prettier.config.cjs --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "clerc": "1.2.1",
    "ink": "5.2.1",
    "react": "18.2.0",
    "fullscreen-ink": "0.1.0",
    "@merossity/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "bunup": "latest",
    "concurrently": "latest",
    "@merossity/qa": "workspace:*",
    "@types/react": "^18.2.0"
  }
}
