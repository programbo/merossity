{
  "name": "@bun-monorepo-template/qa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./prettier": "./prettier/prettier.config.cjs",
    "./prettier-tailwind": "./prettier/tailwind.config.cjs",
    "./oxlint": "./oxlint/oxlint.json",
    "./tsconfig": "./tsconfig/tsconfig.base.json",
    "./tsconfig/node": "./tsconfig/tsconfig.node.json",
    "./tsconfig/web": "./tsconfig/tsconfig.web.json",
    "./tsconfig/react-lib": "./tsconfig/tsconfig.react-lib.json",
    "./testkit": "./src/testkit/index.ts",
    "./logger": "./src/logger/index.ts",
    "./logger/*": "./src/logger/*.ts"
  },
  "files": [
    "dist",
    "oxlint",
    "prettier",
    "tsconfig",
    "src/testkit",
    "src/logger"
  ],
  "scripts": {
    "build": "bunup",
    "lint": "oxlint --config oxlint/oxlint.json --fix .",
    "format": "prettier --config prettier/prettier.config.cjs --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "qa:init": "bun run scripts/qa-init.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "latest",
    "@types/bun": "latest",
    "@types/node": "latest",
    "bunup": "latest",
    "oxlint": "latest",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "latest",
    "typescript": "latest"
  },
  "typesVersions": {
    "": {
      "logger/*": [
        "src/logger/*"
      ]
    }
  }
}
